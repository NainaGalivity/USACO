import java.util.Scanner;

public class Main
{
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int x, count=0;
		String y;
		x=scan.nextInt();
		
		for (int i=0; i<=x; i++) {
		    y=scan.nextLine();

		    if ( y.equals("1 1 1") || y.equals("0 1 1") || y.equals("1 0 1") || y.equals("1 1 0") )
		        count++;
		}
		System.out.println(count);
	}
}
